@model IEnumerable<LearnAspMVC.Models.Category>

@{
}

<div class="container">
    <h1 class="mb-5">List of categories will be displayed here</h1>

    @if (Model.Count() > 0)
    {
        <div class="alert alert-primary d-flex justify-content-between align-items-center" role="alert">
            <strong>@Model.Count() categories are available.</strong>
            <a class="btn btn-primary text-uppercase" asp-controller="category" asp-action="new">
                Create New
            </a>
        </div>
    }
    else
    {
        <div class="alert alert-danger d-flex justify-content-between align-items-center" role="alert">
            <strong>No Item to display!</strong>
            <a class="btn btn-primary text-uppercase" asp-controller="category" asp-action="new">
                Create New
            </a>
        </div>
    }
</div>